<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">






                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#fff">


                    <!-- Cover Image -->

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner1" />



                    <!-- Round image -->

                    <com.alexzh.circleimageview.CircleImageView
                        android:id="@+id/banar1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/pro2"
                        android:layout_marginTop="75dp"
                        android:layout_gravity="center"
                        app:view_borderWidth="2dp"
                        app:view_borderColor="#cccccc" />


                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">



                    <com.piyaso.softforest.piyaso.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tom Cruise"
                        android:textSize="22dp"
                        android:textColor="@color/title_color"
                        android:layout_gravity="center"/>

                    <com.piyaso.softforest.piyaso.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Syracuse, New York"
                        android:layout_gravity="center"
                        android:textColor="@color/title_color"
                        android:textSize="14dp"/>

                    <com.piyaso.softforest.piyaso.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"/>

                    <com.piyaso.softforest.piyaso.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stars can't shine without darkness..."
                        android:textSize="14dp"
                        android:layout_gravity="center"/>
                    <com.piyaso.softforest.piyaso.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life can't shine without pain..."
                        android:textSize="14dp"
                        android:layout_gravity="center"/>



                </LinearLayout>






                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="EDIT PROFILE"
                    android:textColor="@color/edit_profile"
                    android:textAlignment="center"
                    android:background="@drawable/rounded"
                    android:layout_marginTop="30dp"
                    android:padding="10dp"
                    />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"
                    android:layout_marginTop="40dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 "
                            android:textColor="@color/title_color"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sell"
                            android:textSize="14dp"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#ACACAC"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/title_color"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buy"
                            android:textSize="14dp"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#ACACAC"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/title_color"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                        <com.piyaso.softforest.piyaso.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cart"
                            android:textSize="14dp"/>

                    </LinearLayout>




                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC" />




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<ImageView-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:layout_marginTop="15dp"-->
                    <!--android:src="@drawable/olegimage" />-->



                    <com.piyaso.softforest.piyaso.ExtendClasess.ExpandableHeightListView
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"


                        android:horizontalSpacing="-25dp"
                        android:isScrollContainer="false"
                        android:numColumns="2"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="3dp" />



                </RelativeLayout>


            </LinearLayout>



        </ScrollView>





    </RelativeLayout>




