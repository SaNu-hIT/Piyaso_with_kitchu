<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.piyaso.softforest.piyaso.Fragments.CategorySelectFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bottom_black_bgcolor"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="?android:actionBarSize">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_weight="3"
            android:textColor="#fff"
            android:id="@+id/location_textbox"
            android:text="Location"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_gravity="right|end|center"
            android:layout_margin="10dp"


            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW BUTTON"
        android:id="@+id/button_onclick"/>

</LinearLayout>
